<UserControl x:Class="Live_Clock_Tile.FreeClock2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="336">

    <Grid x:Name="LayoutRoot">
        <TextBlock x:Name="ampm" HorizontalAlignment="Left" Margin="10,267,0,0" TextWrapping="Wrap" Text="PM" VerticalAlignment="Top" FontSize="40" Foreground="#FFFDFDFD" Width="316" Height="69" FontFamily="Segoe WP Light" TextAlignment="Right"/>
        <TextBlock x:Name="date" HorizontalAlignment="Left" Margin="20,114,0,0" TextWrapping="Wrap" Text="sunday" VerticalAlignment="Top" FontSize="33" Foreground="#FFFDFDFD" Width="306" TextAlignment="Right" Height="49" FontFamily="Segoe WP SemiLight"/>
        <TextBlock x:Name="hour" HorizontalAlignment="Left" Margin="0,116,0,0" TextWrapping="Wrap" Text="12:49" VerticalAlignment="Top" FontSize="140" Foreground="#FFFDFDFD" Width="336" Height="186" FontFamily="Segoe WP Light" TextAlignment="Right"/>

    </Grid>
</UserControl>